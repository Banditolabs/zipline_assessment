# bin/record_matcher
# Entry point script to run the RecordMatcher from the command line.

require_relative '../lib/record_matcher'

# Expect exactly two command-line arguments in order:
# - a CSV file path
# - a match type (email, phone, or email_or_phone)
if ARGV.length != 2
  puts "Usage: record_matcher path/to/file.csv [email|phone|email_or_phone]"
  exit 1
end

match_type,file_path  = ARGV
matcher = RecordMatcher.new(match_type, file_path)

puts matcher.match
